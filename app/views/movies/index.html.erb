<%= link_to "Submit a movie!", new_movie_path %>

<%= form_tag(movies_path, method: :get) do %>

  <%= label_tag(:q, "Search:") %>
  <%= text_field_tag(:q) %>

    <%= select_tag :t, 
    options_for_select([ 
      [{:include_blank => true}],
      ["<= 90 min", "runtime_in_minutes <= 90"], 
      ["90 - 120 min", "runtime_in_minutes BETWEEN 90 AND 120"], 
      ["=> 120 min", "runtime_in_minutes >= 120"] ], 
      params[:runtime_in_minutes]) %>




  <%= submit_tag("Search") %>
<% end %>
 
<hr>

<%= render 'movie' %>